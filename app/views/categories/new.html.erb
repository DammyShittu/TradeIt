<section>
  <%= form_with model: @category, url: categories_path, scope: :category do |f| %>
  <nav class="nav navbar-light bg-primary">
    <div class="container py-1 px-3 d-flex justify-content-between align-items-center">
    <%= link_to fa_icon('arrow-left'), authenticated_root_path, class: "fs-6 fw-normal text-white"  %>
    <h1 class="fs-6 fw-normal text-white pt-2">Create A Category</h1>
    <%= f.submit "Save", class: "text-white fs-6 bg-transparent border-0 fw-normal" %>
    </div>
  </nav>

    <div class="field mt-2">
      <%= f.text_field :name, autocomplete: "name", placeholder: "Category Name", required: true, class: "form-control py-2 bg-white" %>
    </div>

    <div class="field mt-2">
      <%= f.label :icon, "Please, select an image", class: "form-label mx-3 mb-1 text-muted" %>
      <%= f.file_field :icon, accept: 'image/png, image/gif, image/jpeg', required: true, class: "form-control py-2 bg-white text-muted" %>
    </div>

  <% end %>
</section>
