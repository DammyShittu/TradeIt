<section>
  <%= form_with model: @exchange, local: true do |f| %>
  <nav class="nav navbar-light bg-primary">
    <div class="container py-1 px-3 d-flex justify-content-between align-items-center">
    <%= link_to fa_icon('arrow-left'), :back, class: "fs-6 fw-normal text-white"  %>
    <h1 class="fs-6 fw-normal text-white pt-2">Create An Exchange</h1>
    <%= f.submit "Save", class: "text-white fs-6 bg-transparent border-0 fw-normal" %>
    </div>
  </nav>

    <div class="field mt-2">
      <%= f.text_field :name, autocomplete: "name", placeholder: "Exchange Name", required: true, class: "form-control py-2 bg-white" %>
    </div>

    <div class="field">
      <%= f.number_field :amount, placeholder: "Amount", required: true, class: "form-control py-2 bg-white" %>
    </div>

    <div class="field form-control d-flex flex-column gap-2">
      <%= f.label :category, class: "text-muted" %>
      <%= f.collection_select(:category_ids, Category.all, :id, :name, { prompt: true }, { multiple: true, required: true }) %>
    </div>
  <% end %>
</section>
